<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingTop="10dp"
        android:background="@drawable/okul"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ilkay" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize = "20dp"
            android:text="İlkay Taşlı"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selçuk Üniversitesi Teknoloji Fakültesi Bilgisayar Mühendisliği 4.Sınıf Normal Öğretim Öğrencisi" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Özel bir bankada yarı zamanlı yazılımcı olarak çalışan" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ilkaytasli1905@gmail.com" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <com.ilkaytasli.acilaramalar.MyJustifiedTextView
            android:id="@+id/textViewalt"
            android:text="@string/yazi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/turktelekom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TürkTelekom\n"
            android:clickable="true"
            android:textColor="#21bed2"/>
        <TextView
            android:id="@+id/turkcell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Türkcell\n"
            android:clickable="true"
            android:textColor="#21bed2"/>
        <TextView
            android:id="@+id/vodafone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vodafone"
            android:textColor="#21bed2"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>